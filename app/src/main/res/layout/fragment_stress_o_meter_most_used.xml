<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <TextView
            android:id="@+id/most_used_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:text="Most Used"
            android:textColor="#331E68"
            android:fontFamily="@font/lato_regular"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.1"/>


        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.2">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/youtube_app_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_youtube_graphic"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_bias="0.03"/>

                <TextView
                    android:id="@+id/youtube_app_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Youtube"
                    android:fontFamily="@font/lato_regular"
                    android:textColor="#331E68"
                    android:layout_margin="10dp"
                    android:drawablePadding="30dp"
                    android:textSize="24sp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/youtube_app_icon"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.1"/>

                <TextView
                    android:id="@+id/youtube_app_name_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="89 min"
                    android:fontFamily="@font/lato_regular"
                    android:textColor="#331E68"
                    android:textSize="18sp"
                    app:layout_constraintStart_toEndOf="@id/youtube_app_icon"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/youtube_app_name"
                    app:layout_constraintHorizontal_bias="0.12"/>

                <TextView
                    android:id="@+id/messenger_app_name_percent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12.45%"
                    android:fontFamily="@font/lato_regular"
                    android:textColor="#331E68"
                    android:textSize="18sp"
                    app:layout_constraintStart_toEndOf="@id/youtube_app_icon"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/youtube_app_name"
                    app:layout_constraintHorizontal_bias="0.9"/>

               <ProgressBar
                   style="?android:attr/progressBarStyleHorizontal"
                   android:layout_width="300dp"
                   android:layout_height="20dp"
                   android:max="100"
                   android:min="0"
                   android:backgroundTint="#8B939A"
                   android:progressTint="#A5E830"
                   android:visibility="visible"
                   android:progress="80"
                   tools:targetApi="o"
                   app:layout_constraintTop_toBottomOf="@id/messenger_app_name_percent"
                   app:layout_constraintStart_toEndOf="@id/youtube_app_icon"
                   app:layout_constraintEnd_toEndOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>


    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.37">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/most_used_app_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_messenger_graphic"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.03"/>

            <TextView
                android:id="@+id/most_used_app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Messenger"
                android:fontFamily="@font/lato_regular"
                android:textColor="#331E68"
                android:layout_margin="10dp"
                android:drawablePadding="30dp"
                android:textSize="24sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/most_used_app_icon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.1"/>

            <TextView
                android:id="@+id/most_used_app_name_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="52 min"
                android:fontFamily="@font/lato_regular"
                android:textColor="#331E68"
                android:textSize="18sp"
                app:layout_constraintStart_toEndOf="@id/most_used_app_icon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/most_used_app_name"
                app:layout_constraintHorizontal_bias="0.12"/>

            <TextView
                android:id="@+id/most_used_app_name_percent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10.45%"
                android:fontFamily="@font/lato_regular"
                android:textColor="#331E68"
                android:textSize="18sp"
                app:layout_constraintStart_toEndOf="@id/most_used_app_icon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/most_used_app_name"
                app:layout_constraintHorizontal_bias="0.9"/>

            <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="300dp"
                android:layout_height="20dp"
                android:max="100"
                android:min="0"
                android:backgroundTint="#8B939A"
                android:progressTint="#A5E830"
                android:visibility="visible"
                android:progress="40"
                tools:targetApi="o"
                app:layout_constraintTop_toBottomOf="@id/most_used_app_name_percent"
                app:layout_constraintStart_toEndOf="@id/most_used_app_icon"
                app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.54">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/twitter_app_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_twitter_graphic"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.03"/>

            <TextView
                android:id="@+id/twitter_app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Twitter"
                android:fontFamily="@font/lato_regular"
                android:textColor="#331E68"
                android:layout_margin="10dp"
                android:drawablePadding="30dp"
                android:textSize="24sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/twitter_app_icon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.1"/>

            <TextView
                android:id="@+id/twitter_app_name_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="27 min"
                android:fontFamily="@font/lato_regular"
                android:textColor="#331E68"
                android:textSize="18sp"
                app:layout_constraintStart_toEndOf="@id/twitter_app_icon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/twitter_app_name"
                app:layout_constraintHorizontal_bias="0.12"/>

            <TextView
                android:id="@+id/twitter_app_name_percent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8.45%"
                android:fontFamily="@font/lato_regular"
                android:textColor="#331E68"
                android:textSize="18sp"
                app:layout_constraintStart_toEndOf="@id/twitter_app_icon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/twitter_app_name"
                app:layout_constraintHorizontal_bias="0.9"/>

            <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="300dp"
                android:layout_height="20dp"
                android:max="100"
                android:min="0"
                android:backgroundTint="#8B939A"
                android:progressTint="#A5E830"
                android:visibility="visible"
                android:progress="20"
                tools:targetApi="o"
                app:layout_constraintTop_toBottomOf="@id/twitter_app_name_percent"
                app:layout_constraintStart_toEndOf="@id/twitter_app_icon"
                app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.71">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/facebook_app_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_facebook_graphic"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.03"/>

            <TextView
                android:id="@+id/facebook_app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Facebook"
                android:fontFamily="@font/lato_regular"
                android:textColor="#331E68"
                android:layout_margin="10dp"
                android:drawablePadding="30dp"
                android:textSize="24sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/facebook_app_icon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.1"/>

            <TextView
                android:id="@+id/facebook_app_name_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12 min"
                android:fontFamily="@font/lato_regular"
                android:textColor="#331E68"
                android:textSize="18sp"
                app:layout_constraintStart_toEndOf="@id/facebook_app_icon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/facebook_app_name"
                app:layout_constraintHorizontal_bias="0.12"/>

            <TextView
                android:id="@+id/facebook_app_name_percent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3.45%"
                android:fontFamily="@font/lato_regular"
                android:textColor="#331E68"
                android:textSize="18sp"
                app:layout_constraintStart_toEndOf="@id/facebook_app_icon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/facebook_app_name"
                app:layout_constraintHorizontal_bias="0.9"/>

            <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="300dp"
                android:layout_height="20dp"
                android:max="100"
                android:min="0"
                android:backgroundTint="#8B939A"
                android:progressTint="#A5E830"
                android:visibility="visible"
                android:progress="10"
                tools:targetApi="o"
                app:layout_constraintTop_toBottomOf="@id/facebook_app_name_percent"
                app:layout_constraintStart_toEndOf="@id/facebook_app_icon"
                app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>



























</androidx.constraintlayout.widget.ConstraintLayout>